/*模块*/
.movie{float:left; width:760px;}
.movie_list{float:left; width:728px; margin-top:5px; overflow:hidden; }
.movie_list li{width:120px;float:left; margin-top:15px;}
.movie_list li a img{ width:114px; height:152px; overflow:hidden; padding:2px; border:solid 1px #dcdcdc; background-color:#fff;}
.movie_list li a:hover img{ border:1px solid #077ac7;padding:2px;}
.movie_list li b{float:left; margin-top:5px; text-align:left; width:104px; font-weight:400;}
.movie_list li b a{display:block; width:120px; height:22px; overflow:hidden; text-overflow:ellipsis;-webkit-text-overflow:ellipsis; color:#077ac7; text-decoration: none;}
.movie_list li b a:hover{ text-decoration:underline;}
.movie_list li b em{padding-left:10px; color:#f77e13; font-style:normal;}
.movie_list li b img{ float:left;}
.movie_list li p{float:left; width:114px; background:#000; filter:alpha(opacity=80); opacity:0.8; height:20px; line-height:20px; color:#fff; text-align:right; margin-top:-27px; margin-left:3px; display:inline;}
